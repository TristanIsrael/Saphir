# Contributor:
# Maintainer: Tristan IsraÃ«l <tristan.israel@icloud.com>
pkgname=saphir-lib
pkgver=0.1
pkgrel=1
pkgdesc="Saphir - Library"
url="https://defense.gouv.fr/"
arch="noarch"
license="MIT"
depends="psec-lib"
makedepends=""
checkdepends=""
install=""
subpackages=""
replaces=""
builddir="$srcdir/"
options="!check"  # no tests provided
giturl="https://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@github.com/tibsys/saphir"
source=""

prepare() {
    mkdir -p "$builddir"
    cd "$builddir"
    git clone "$giturl" "$pkgname"
}

build() {
    cd "$builddir/$pkgname"/python/libsaphir
    python3 -m build
}

package() {
    cd "$builddir/$pkgname"/python/libsaphir/dist
    python3 -m installer --destdir=$pkgdir "libspahir-$pkgver-py3-none-any.whl"
}
