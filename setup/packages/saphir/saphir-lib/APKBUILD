# Contributor:
# Maintainer: Tristan IsraÃ«l <tristan.israel@icloud.com>
pkgname=saphir-gui
pkgver=1.0
pkgrel=1
pkgdesc="Saphir - Graphical User Interface"
url="https://defense.gouv.fr/"
arch="noarch"
license="MIT"
depends="psec-lib psec-gui-base python3 py3-pyside6 py3-psutil py3-humanize fontconfig freetype font-roboto"
makedepends=""
checkdepends=""
install="$pkgname.post-install"
subpackages=""
replaces=""
builddir="$srcdir/"
options="!check"  # no tests provided
giturl="https://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@github.com/tibsys/saphir"
source=""

prepare() {
    mkdir -p "$builddir"
    cd "$builddir"
    git clone "$giturl" .
}

build() {
    cd "$builddir/python/libsaphir"
    python3 -m build
}

package() {
    cd "$builddir/python/libsaphir/dist"
    mkdir -p "$pkgdir/usr/lib/saphir/lib"
    tar xvzf *.tar.gz -C "$pkgdir/usr/lib/saphir/lib"
    cd "$pkgdir/usr/lib/saphir"
    ln -s "libsaphir-$psec_branch" libsaphir 
}
