pkgname=saphir-lib
pkgver=1.0
pkgrel=0
pkgdesc="Saphir - Library"
url="https://defense.gouv.fr/"
arch="noarch"
license="MIT"
depends="psec-lib"
makedepends="python3-dev py3-build py3-installer"
checkdepends=""
install=""
subpackages=""
replaces=""
builddir="$srcdir/"
options="!check"  # no tests provided
source="
$pkgname.zip::https://github.com/TristanIsrael/Saphir/archive/refs/heads/$gitbranch.zip
"

prepare() {
    default_prepare
}

build() {
    cd "$gitrepo-$gitbranch/python/libsaphir"
    python3 -m build
}

package() {
    cd "$gitrepo-$gitbranch/python/libsaphir/dist"
    python3 -m installer --destdir=$pkgdir "libsaphir-$pkgver-py3-none-any.whl"
}
