# Contributor:
# Maintainer: Tristan IsraÃ«l <tristan.israel@icloud.com>
pkgname=saphir-av-eset
pkgver=1.0
pkgrel=1
pkgdesc="Saphir - ESET Antivirus"
url="https://defense.gouv.fr/"
arch="noarch"
license="MIT"
depends="saphir-container-eset saphir-lib psec-lib"
makedepends=""
checkdepends=""
install="$pkgname.post-install"
subpackages=""
replaces=""
builddir="$srcdir/"
options="!check"  # no tests provided
source="
av-controller.initd
av-controller.py
scan-file.sh
get-scan-result.sh
stop-all-scans.sh
"

package() {
    install -D -m755 "$srcdir"/av-controller.initd "$pkgdir"/etc/init.d/av-controller
    install -D -m755 "$srcdir"/av-controller.py "$pkgdir"/usr/lib/saphir/bin/av-controller.py

    install -D -m755 "$srcdir"/scan-file.sh "$pkgdir"/usr/lib/saphir/bin/scan-file.sh
    install -D -m755 "$srcdir"/get-scan-result.sh "$pkgdir"/usr/lib/saphir/bin/get-scan-result.sh
    install -D -m755 "$srcdir"/stop-all-scans.sh "$pkgdir"/usr/lib/saphir/bin/stop-all-scans.sh
}
