pkgname=saphir-av-eset
pkgver=1.0
pkgrel=1
pkgdesc="Saphir - ESET Antivirus"
url="https://defense.gouv.fr/"
arch="noarch"
license="MIT"
depends="saphir-container-eset saphir-lib psec-lib"
makedepends=""
checkdepends=""
install="$pkgname.post-install"
subpackages=""
replaces=""
builddir="$srcdir/"
options="!check"  # no tests provided
source="
av-controller.initd
av-controller.py
"

package() {
    install -D -m755 "$srcdir"/av-controller.initd "$pkgdir"/etc/init.d/av-controller
    install -D -m755 "$srcdir"/av-controller.py "$pkgdir"/usr/lib/saphir/bin/av-controller.py
}
