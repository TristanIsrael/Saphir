    #install -D -m644 "$srcdir"/Splash_1024_768.ppm "$pkgdir"/boot/Splash_1024_768.ppm
    install -D -m644 "$srcdir"/splash_1280_800.png "$pkgdir"/boot/splash_1280_800.png
}

