# Contributor:
# Maintainer: Tristan IsraÃ«l <tristan.israel@icloud.com>
pkgname=saphir-gui
pkgver=0.1
pkgrel=1
pkgdesc="Saphir - Graphical User Interface"
url="https://defense.gouv.fr/"
arch="noarch"
license="MIT"
depends="psec-lib saphir-lib psec-gui-base python3 py3-pyside6 py3-psutil py3-humanize fontconfig freetype font-roboto"
makedepends=""
checkdepends=""
install="$pkgname.post-install"
subpackages=""
replaces=""
builddir="$srcdir/"
options="!check"  # no tests provided
giturl="https://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@github.com/tibsys/saphir"
source="gui.initd"

prepare() {
    mkdir -p "$builddir"
    cd "$builddir"
    git clone "$giturl"
}

build() {    
    cd "$builddir/saphir/python/gui"
    python3 -m build
}

package() {
    cd "$builddir/saphir/python/gui/dist"
    mkdir -p "$pkgdir/usr/lib/saphir/gui"
    tar xvzf *.tar.gz -C "$pkgdir/usr/lib/saphir/gui"
    cd "$pkgdir/usr/lib/saphir/gui"
    ln -s "saphir_$pkgname" saphir

    install -D -m755 "$srcdir"/gui.initd "$pkgdir"/etc/init.d/gui
}
